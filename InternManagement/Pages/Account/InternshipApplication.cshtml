@page
@model InternManagement.Pages.Account.InternshipApplicationModel
@{
    Layout = null;
    ViewData["Title"] = "Apply for Internship";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Apply for Internship | Intern Management System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h2 class="text-center mt-5 mb-3">Apply for Internship</h2>
                <form method="post" enctype="multipart/form-data">
                   
                    <div class="form-group mb-3">
                        <label asp-for="Intern.FullName" class="control-label"></label>
                        <input asp-for="Intern.FullName" class="form-control" />
                        <span asp-validation-for="Intern.FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Intern.Email" class="control-label"></label>
                        <input asp-for="Intern.Email" class="form-control" />
                        <span asp-validation-for="Intern.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Intern.PhoneNumber" class="control-label"></label>
                        <input asp-for="Intern.PhoneNumber" class="form-control" />
                        <span asp-validation-for="Intern.PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Intern.PersonalId" class="control-label">Personal ID</label>
                        <input asp-for="Intern.PersonalId" class="form-control" />
                        <span asp-validation-for="Intern.PersonalId" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Intern.Uni" class="control-label">University</label>
                        <input asp-for="Intern.Uni" class="form-control" />
                        <span asp-validation-for="Intern.Uni" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Intern.Major" class="control-label"></label>
                        <input asp-for="Intern.Major" class="form-control" />
                        <span asp-validation-for="Intern.Major" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="Intern.Gpa" class="control-label">GPA</label>
                        <input asp-for="Intern.Gpa" class="form-control" />
                        <span asp-validation-for="Intern.Gpa" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Intern.Birthday" class="control-label"></label>
                        <input asp-for="Intern.Birthday" class="form-control" />
                        <span asp-validation-for="Intern.Birthday" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Intern.TeamId" class="control-label">Select Team</label>
                        <select asp-for="Intern.TeamId" class="form-control" asp-items="Model.TeamOptions">
                            <option value="">-- Select Team --</option>
                        </select>
                        <span asp-validation-for="Intern.TeamId" class="text-danger"></span>
                    </div>             
                    <div class="form-group mb-3">
                        <label asp-for="Intern.InternshipStartingDate" class="control-label"></label>
                        <input asp-for="Intern.InternshipStartingDate" class="form-control" />
                        <span asp-validation-for="Intern.InternshipStartingDate" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Intern.InternshipEndingDate" class="control-label"></label>
                        <input asp-for="Intern.InternshipEndingDate" class="form-control" />
                        <span asp-validation-for="Intern.InternshipEndingDate" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="CvFile"></label>
                        <input asp-for="CvFile" type="file" class="form-control" />
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="PhotoFile"></label>
                        <input asp-for="PhotoFile" type="file" class="form-control" />
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary">Submit Application</button>
                    </div>
                </form>
                <div class="text-center mt-3">
                    <a href="/Account/Login" class="btn btn-link">Back to Login</a>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await Html.PartialAsync("_ValidationScriptsPartial")
</body>
</html>
