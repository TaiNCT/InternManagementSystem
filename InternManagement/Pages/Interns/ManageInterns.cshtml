@page
@model InternManagement.Pages.Interns.ManageInternModel
@{
    ViewData["Title"] = "Manage Interns";
}
<style>
     .short-select {
         width: 200px;
     }
</style>
<form method="get">
    <div class="form-group">
        <label for="TeamId">Select Team:</label>
        <select id="TeamId" name="TeamId" asp-items="Model.TeamsSelectList" class="form-control mt-1 short-select" onchange="this.form.submit()">
            <option value="" class="text-center">--- Select a Team ---</option>
        </select>

    </div>
</form>

@if (Model.SelectedTeam != null)
{
    <h3>Interns in @Model.SelectedTeam.TeamName</h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>University</th>
                <th>Major</th>
                <th>GPA</th>
                <th>Birthday</th>
                <th>Internship Period</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var intern in Model.Interns)
            {
                <tr>
                    <td>@intern.FullName</td>
                    <td>@intern.Email</td>
                    <td>@intern.PhoneNumber</td>
                    <td>@intern.Uni</td>
                    <td>@intern.Major</td>
                    <td>@intern.Gpa</td>
                    <td>@intern.Birthday.ToString("yyyy-MM-dd")</td>
                    <td>@intern.InternshipStartingDate.ToString("yyyy-MM-dd") - @intern.InternshipEndingDate.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a asp-page-handler="Details" asp-route-internId="@intern.InternId" class="btn btn-info">Details</a>
                        <form method="post" asp-page-handler="Delete" asp-route-id="@intern.InternId" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this intern?');">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@if (Model.SelectedIntern != null)
{
   
    <div>
        <h3>Assignments</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Description</th>
                    <th>Deadline</th>
                    <th>Grade</th>
                    <th>Weight</th>
                    <th>Complete</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var assignment in Model.Assignments)
                {
                    <tr>
                        <td>@assignment.Description</td>
                        <td>@assignment.Deadline?.ToString("yyyy-MM-dd")</td>
                        <td>@assignment.Grade</td>
                        <td>@assignment.Weight</td>
                        <td>@assignment.Complete</td>
                        <td>
                            <form method="post" asp-page-handler="DeleteAssignment" asp-route-assignmentId="@assignment.AssignmentId" onsubmit="return confirm('Are you sure you want to delete this assignment?');">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <h4>Add New Assignment</h4>
        <form method="post" asp-page-handler="AddAssignment">
            <div class="form-group">
                <label for="Description">Description:</label>
                <input type="text" id="Description" name="NewAssignment.Description" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Deadline">Deadline:</label>
                <input type="date" id="Deadline" name="NewAssignment.Deadline" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Grade">Grade:</label>
                <input type="number" id="Grade" name="NewAssignment.Grade" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Weight">Weight:</label>
                <input type="number" id="Weight" name="NewAssignment.Weight" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Complete">Complete:</label>
                <input type="checkbox" id="Complete" name="NewAssignment.Complete" />
            </div>
            <button type="submit" class="btn btn-primary">Add Assignment</button>
        </form>
    </div>
}