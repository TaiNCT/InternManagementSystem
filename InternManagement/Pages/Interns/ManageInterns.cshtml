@page
@model InternManagement.Pages.Interns.ManageInternModel
@{
    ViewData["Title"] = "Manage Interns";
}

<form method="get">
    <div class="form-group">
        <label for="TeamId">Select Team:</label>
        <select id="TeamId" name="TeamId" asp-items="Model.TeamsSelectList" class="form-control" onchange="this.form.submit()">
            <option value="">-- Select a Team --</option>
        </select>
    </div>
</form>

@if (Model.SelectedTeam != null)
{
    <form method="get">
        <div class="form-group">
            <label for="InternId">Select Intern:</label>
            <select id="InternId" name="InternId" asp-items="Model.InternsSelectList" class="form-control" onchange="this.form.submit()">
                <option value="">-- Select an Intern --</option>
            </select>
        </div>
    </form>
}

@if (Model.SelectedIntern != null)
{
    <div>
        <h3>Intern Details</h3>
        <dl class="row">
            <dt class="col-sm-2">Full Name</dt>
            <dd class="col-sm-10">@Model.SelectedIntern.FullName</dd>
            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@Model.SelectedIntern.Email</dd>
            <dt class="col-sm-2">Phone</dt>
            <dd class="col-sm-10">@Model.SelectedIntern.PhoneNumber</dd>
            <dt class="col-sm-2">University</dt>
            <dd class="col-sm-10">@Model.SelectedIntern.Uni</dd>
            <dt class="col-sm-2">Major</dt>
            <dd class="col-sm-10">@Model.SelectedIntern.Major</dd>
            <dt class="col-sm-2">GPA</dt>
            <dd class="col-sm-10">@Model.SelectedIntern.Gpa</dd>
            <dt class="col-sm-2">Birthday</dt>
            <dd class="col-sm-10">@Model.SelectedIntern.Birthday.ToString("yyyy-MM-dd")</dd>
            <dt class="col-sm-2">Internship Period</dt>
            <dd class="col-sm-10">@Model.SelectedIntern.InternshipStartingDate.ToString("yyyy-MM-dd") - @Model.SelectedIntern.InternshipEndingDate.ToString("yyyy-MM-dd")</dd>
        </dl>

        <form method="post" asp-page-handler="Delete" asp-route-id="@Model.SelectedIntern.InternId" onsubmit="return confirm('Are you sure you want to delete this intern?');">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>
    <div>
        <h3>Assignments</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Description</th>
                    <th>Deadline</th>
                    <th>Grade</th>
                    <th>Weight</th>
                    <th>Complete</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var assignment in Model.Assignments)
                {
                    <tr>
                        <td>@assignment.Description</td>
                        <td>@assignment.Deadline?.ToString("yyyy-MM-dd")</td>
                        <td>@assignment.Grade</td>
                        <td>@assignment.Weight</td>
                        <td>@assignment.Complete</td>
                        <td>
                            <form method="post" asp-page-handler="DeleteAssignment" asp-route-assignmentId="@assignment.AssignmentId" onsubmit="return confirm('Are you sure you want to delete this assignment?');">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <h4>Add New Assignment</h4>
        <form method="post" asp-page-handler="AddAssignment">
            <div class="form-group">
                <label for="Description">Description:</label>
                <input type="text" id="Description" name="NewAssignment.Description" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Deadline">Deadline:</label>
                <input type="date" id="Deadline" name="NewAssignment.Deadline" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Grade">Grade:</label>
                <input type="number" id="Grade" name="NewAssignment.Grade" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Weight">Weight:</label>
                <input type="number" id="Weight" name="NewAssignment.Weight" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Complete">Complete:</label>
                <input type="checkbox" id="Complete" name="NewAssignment.Complete" />
            </div>
            <button type="submit" class="btn btn-primary">Add Assignment</button>
        </form>
    </div>
}