@page
@model InternManagement.Pages.Interviews.IndexModel
@{
    ViewData["Title"] = "Interviews";
}
<style>
    /* Table Styles */
    .table {
        width: 100%;
        border-collapse: collapse;
        font-family: Arial, sans-serif;
    }

        .table th, .table td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .table th {
            background-color: #f2f2f2;
            font-weight: bold;
        }

        .table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

    /* Button Styles */
    .btn {
        display: inline-block;
        padding: 8px 16px;
        font-size: 14px;
        font-weight: bold;
        text-decoration: none;
        border-radius: 4px;
        transition: background-color 0.3s ease;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    /* Misc Styles */
    .text-center {
        text-align: center;
    }

    .mb-3 {
        margin-bottom: 1rem;
    }
</style>
<table class="table">
    <thead>
        <tr>
            <th>Intern</th>
            <th>Team</th>
            <th>Supervisor</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var interview in Model.Interviews)
        {
            <tr>
                <td>@interview.Intern.FullName</td>
                <td>@interview.Team.TeamName</td>
                <td>
                    @if (interview.Supervisor?.User != null)
                    {
                        @interview.Supervisor.User.Username
                    }
                    else
                    {
                        <span>N/A</span>
                    }
                </td>
                <td>
                    <a asp-page="./ScheduleInterview" asp-route-interviewId="@interview.InterviewId" class="btn btn-primary">Schedule</a>
                </td>
            </tr>
        }
    </tbody>
</table>
