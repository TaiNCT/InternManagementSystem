<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InternManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InternManagement.styles.css" asp-append-version="true" />
    <style>
        body {
            overflow-x: hidden; /* Disable horizontal scrollbar */
        }
    </style>
</head>
<body>
    <div style="display: flex; min-height: 98vh;">
        <!-- Sidebar -->
        <nav class="navbar navbar-dark bg-primary" style="height: 100vh; position: fixed; width: 200px; display: flex; flex-direction: column; colum">
            <div class="logo-area" style="margin: 20px auto 0; text-align: center;">
                <img src="~/Image/remix-rumble-1080x1080.jpg" alt="Logo" style="width: 150px; height: 150px;" />
                <p style="margin-top: 10px; color: white; font-size: large;">Intern Management System</p>
            </div>

            <div style="display: flex; flex-direction: column; width: 180px;margin-bottom:900px ">
                <button type="button" class="btn btn-primary" style="margin-bottom: 5px;" href="/Index">Home</button>
                <button type="button" class="btn btn-primary" style="margin-bottom: 5px;">Intern</button>
                <button type="button" class="btn btn-primary" style="margin-bottom: 5px;" href="/Admin/ApproveInternships">Intern Applications</button>
                <button type="button" class="btn btn-primary" style="margin-bottom: 5px;">Tools</button>
            </div>

            <div class="logout-area" style="background-color: #163851; height: 60px;width: 200px; display: flex; justify-content: center; align-items: center;">
                <span style="font-size: 20px; font-weight: initial; color: white; margin-left: 5px;">Admin</span>
                <a class="btn btn-danger" href="/Account/Logout" style="margin-left: 30px; color: black;">Sign out</a>
            </div>
        </nav>



        <!-- Main content -->
        <div style="margin-left: 220px;margin-right:20px; border-radius: 25px; width: 100%  ;height:100px; background-color:blueviolet">
            <header class="header" style="padding: 20px;display:flex ; justify-content:space-between">
                <div>

                    <h1 class="header-title">@ViewData["Title"]</h1>
                </div>
                <div class="notifications" style="position: relative;">
                    <div style=" align-items:center;display:flex ">
                        <button class="btn btn-light" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="badge badge-pill badge-danger">3</span> <!-- Adjust this count dynamically -->
                            <i class="fas fa-bell"></i>
                        </button>
                    </div>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#">Notification 1</a></li>
                        <li><a class="dropdown-item" href="#">Notification 2</a></li>
                        <li><a class="dropdown-item" href="#">Notification 3</a></li>
                    </ul>
                </div>
            </header>
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
           @*  <footer class="border-top footer text-muted">
                <div class="container">
                    &copy; 2024 - InternManagement - <a asp-area="" asp-page="/Privacy">Privacy</a>
                </div>
            </footer> *@
        </div>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>