@page
@model InternManagement.Pages.Admin.CreateModel

@{
    ViewData["Title"] = "Create";
}


<h4>Campaign</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Campaign.Tittle" class="control-label"></label>
                <input asp-for="Campaign.Tittle" class="form-control" />
                <span asp-validation-for="Campaign.Tittle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Campaign.Description" class="control-label"></label>
                <input asp-for="Campaign.Description" class="form-control" />
                <span asp-validation-for="Campaign.Description" class="text-danger"></span>
            </div>
            <!-- <input asp-for="Campaign.CreatedDate" class="form-control" type="hidden"/> -->
            <div class="form-group">
                <label asp-for="Campaign.StartDate" class="control-label" ></label>
                <input asp-for="Campaign.StartDate" class="form-control"  />
                <span asp-validation-for="Campaign.StartDate" class="text-danger" ></span>
            </div>
            <div class="form-group">
                <label asp-for="Campaign.EndDate" class="control-label"></label>
                <input asp-for="Campaign.EndDate" class="form-control" />
                <span asp-validation-for="Campaign.EndDate" class="text-danger"></span>
            </div>
            <!--<input asp-for="Campaign.CreatedBy" class="form-control" type="hidden"/>-->
            <div class="form-group">
                <label asp-for="Campaign.TeamId" class="control-label"></label>
                <select asp-for="Campaign.TeamId" class="form-control" asp-items="Model.TeamList"></select>
                <span asp-validation-for="Campaign.TeamId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Campaign.Progress" class="control-label"></label>
                <input asp-for="Campaign.Progress" class="form-control" />
                <span asp-validation-for="Campaign.Progress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PictureURL">PictureURL</label>
                <input asp-for="PictureURL" type="file" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Campaign.Status" class="control-label"></label>
                <input asp-for="Campaign.Status" class="form-control" />
                <span asp-validation-for="Campaign.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
