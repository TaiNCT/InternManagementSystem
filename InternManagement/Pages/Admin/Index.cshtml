@page
@model InternManagement.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Campaign Management";
}

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Campaigns[0].Tittle)</th>
            <th>@Html.DisplayNameFor(model => model.Campaigns[0].Description)</th>
            <th>@Html.DisplayNameFor(model => model.Campaigns[0].CreatedDate)</th>
            <th>@Html.DisplayNameFor(model => model.Campaigns[0].StartDate)</th>
            <th>@Html.DisplayNameFor(model => model.Campaigns[0].EndDate)</th>
            <th>@Html.DisplayNameFor(model => model.Campaigns[0].CreatedBy)</th>
            <th>@Html.DisplayNameFor(model => model.Campaigns[0].Team)</th>
            <th>@Html.DisplayNameFor(model => model.Campaigns[0].Progress)</th>
            <th>@Html.DisplayNameFor(model => model.Campaigns[0].PictureUrl)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Campaigns)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Tittle)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.CreatedDate)</td>
                <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                <td>@Html.DisplayFor(modelItem => item.EndDate)</td>
                <td>@Html.DisplayFor(modelItem => item.CreatedBy)</td>
                <td>@Html.DisplayFor(modelItem => item.Team.TeamName)</td>
                <td>@Html.DisplayFor(modelItem => item.Progress)</td>
                <td>@Html.DisplayFor(modelItem => item.PictureUrl)</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.CampaignId" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-page="./Details" asp-route-id="@item.CampaignId" class="btn btn-info btn-sm">Details</a>
                    <a asp-page="./Delete" asp-route-id="@item.CampaignId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>