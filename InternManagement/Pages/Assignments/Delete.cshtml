@page
@model DeleteModel
@{
    ViewData["Title"] = "Delete Assignment";
}
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Assignment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Assignment.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Assignment.Deadline)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Assignment.Grade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Assignment.Weight)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Assignment.Complete)
        </dt>
        
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Assignment.AssignmentId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>